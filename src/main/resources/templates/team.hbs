{{#partial "content"}}
<p><a href="/teams">back to team list</a></p>
<h3>{{team.name}}</h3>
<p>{{team.description}}</p>
<p><strong>team members:</strong></p>
{{#if members}}
    <ul>
        {{#each members}}
        <li>{{name}} <a href="/member/{{id}}">more</a></li>
        {{/each}}
    </ul>
{{else}}
<p>&emsp;&emsp;no members yet</p>
{{/if}}
<hr>
<p><a href="add_member/{{team.id}}">add a team member</a></p>
<p><a href="/teams/update/{{team.id}}">update team</a></p>
<p><a href="/teams/delete/{{team.id}}">delete</a></p>

{{/partial}}
{{>layout.hbs}}